generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Ticket {
  id        String       @id
  createdAt DateTime     @default(now())
  updatedAt DateTime
  title     String
  content   String       @db.VarChar(2000)
  status    TicketStatus @default(OPEN)
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  DONE
}
